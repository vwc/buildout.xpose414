<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="xpose.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    <article id="testimonials">
      <header class="page-header">
        <h1 class="documentFirstHeading"
          tal:content="context/Title" />
        <p class="lead" tal:condition="context/Description"
          tal:content="context/Description" />
      </header>
      <section id="content-core">
        <div tal:condition="context/text"
          tal:content="structure context/text/output" />
        <tal:subitems tal:condition="view/has_subpages">
          <article tal:repeat="item view/subpages"
            class="facet">
            <header class="facet-header">
              <h2><a href="" tal:attributes="href item/getURL"
                    tal:content="item/Title" /></h2>
            </header>
            <section class="facet-body"
              tal:define="item_obj item/getObject">
              <img tal:condition="item/image"
                  tal:define="scales item_obj/@@images"
                  tal:replace="structure python: scales.tag('image',
                               width=120, height=120, direction='down')"
                  />
              <p class="muted" tal:condition="item/Description"
                tal:content="item/Description" />
            </section>
            <footer class="facet-footer">
              <a href="" tal:attributes="href item/getURL"
                i18n:translate="">Read more</a>
            </footer>
          </article>
        </tal:subitems>
      </section>
    </article>
  </metal:content-core>
</metal:main>

</body>
</html>

