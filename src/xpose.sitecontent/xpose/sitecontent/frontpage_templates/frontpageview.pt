<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="xpose.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    
    <section id="frontpage-view">
      <header class="page-header">
        <h1 class="documentFirstHeading"
          tal:content="context/Title" />
      </header>

      <section id="fp-testimonials">
        <div class="speech-bubble" tal:condition="view/has_quotes">
          <tal:item tal:define="item view/quote">
            <p>Some introductional text for this quote</p>
            <h3><span tal:replace="item/customer" />,
              <span tal:replace="item/position" />
            </h3>
            <p tal:content="item/company" />
            <p><i class="icon-quote-left"></i>
              <span tal:content="item/statement">A quote a day keeps the CEO at bay</span>
              <i class="icon-quote-right"></i>
            </p>
          </tal:item>
        </div>
        <div class="alert" tal:condition="not:view/has_quotes">
          <h4>Testimonials</h4>
          <p>No testimonials available yet</p>
        </div>
      </section>

      <section id="content-core">
        <p class="lead" tal:condition="context/Description"
          tal:content="context/Description" />

      </section>
    </section>
  </metal:content-core>
</metal:main>

</body>
</html>

