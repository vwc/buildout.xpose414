<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="xpose.sitecontent">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    <section id="testimonials">
      <header class="page-header">
        <h1 class="documentFirstHeading"
          tal:content="context/Title" />
      </header>

      <section class="item-listing">

        <p class="lead" tal:condition="context/Description"
          tal:content="context/Description" />

        <div class="alert" tal:condition="not:view/has_items">
          <h4>Information</h4>
          <p i18n:translate="">
            This folder does not have any published testimonials yet.
          </p>
          <a href="" class="btn"
            i18n:translate=""
            tal:define="context_url context/absolute_url"
            tal:attributes="href python:context_url + '/++add++xpose.sitecontent.testimonial'">
            Add Testimonial</a>
        </div>

        <div tal:define="
            Batch python:modules['Products.CMFPlone'].Batch;
            b_size python:int(request.get('b_size', 20));
            b_start python:int(request.get('b_start', 0));
            results python:context.restrictedTraverse('@@folderListing')(batch=True, b_size=b_size, b_start=b_start);
            batch python:Batch(results, b_size, b_start);">
            <article tal:repeat="item results">
              <h4><a href="" tal:attributes="href item/getURL"
                    tal:content="item/Title" />
              </h4>
              <blockquote>
                <p tal:content="item/statement">
                  Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                </p>
                <small><span tal:replace="item/customer" />
                  <cite title="Source Title" class="discreet">
                    <span tal:replace="item/position" />,
                    <span tal:content="item/company">Source Title</span>
                  </cite>
                </small>
              </blockquote>
            </article>
          <div metal:use-macro="context/batch_macros/macros/navigation" />
        </div>

      </section>
    </section>
  </metal:content-core>
</metal:main>

</body>
</html>

